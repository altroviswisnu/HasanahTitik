<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.altrovis.hasanahtitik.ArahKiblatActivity">

    <ImageView
        android:id="@+id/imageViewKiblat"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arahkiblat" />
    <TextView
        android:id="@+id/TextViewMyLatitude"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewKiblat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/TextViewMyLongitude"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewMyLatitude"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
