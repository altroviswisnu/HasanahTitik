<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.altrovis.hasanahtitik.JadwalSholatActivity">

    <Spinner
        android:id="@+id/SpinnerWilayahSholat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/WilayahSholat"/>

    <TextView
        android:id="@+id/TextViewTanggalHariIni"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1 Februari 2016"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewWaktuSaatIni"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="15:23:30"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewJadwalSholatSelanjutnya"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sholat Selanjutnya : Maghrib"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewWaktuSholatSelanjutnya"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="18:20"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ListViewJadwalSholat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
